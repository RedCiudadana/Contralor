{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}

{{title model.config.htmlTitle}}

<div id="wrapper">
  {{#bs-navbar type="inverse" position="fixed-top" fluid=false as |navbar|}}
    <div class="navbar-header">
      {{!-- {{#bs-navbar-toggle}}
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      {{/bs-navbar-toggle}} --}}

      {{#link-to "application" class="navbar-brand"}}
        {{#if model.config.logoUrl}}
          <img
            src="{{model.config.logoUrl}}"
            class="img-responsive"
            title="Elección MP"
            alt="Elección MP">
        {{else}}
          <img
            src="app/img/logo-eleccion-mp.png"
            class="img-responsive"
            title="{{model.config.logoTitle}}"
            alt="{{model.config.logoTitle}}">
        {{/if}}
      {{/link-to}}
    </div>

    {{#navbar.content}} 
      {{#navbar.nav as |nav|}}
        {{#each model.config.navbarLinks as |link|}}
          {{#nav.item active=false}}{{#link-to link.route}}{{link.title}}{{/link-to}}{{/nav.item}}
        {{/each}}
      {{/navbar.nav}}
    {{/navbar.content}}
  {{/bs-navbar}}

  <div class="container content-container">
    {{outlet}}
  </div>
</div>

