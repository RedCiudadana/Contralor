<div class="container-profile">
  <div class="profile-candidate">
    <div class="row">
      <div class="col-md-3">
        <div id="candidate-img-profile" style="padding-top: 20px;">
          <img
            src="{{model.perfil.fotoPerfil}}"
            alt="{{model.perfil.nombre}}"
            border="0"
            class="img-responsive center-block"
          >
        </div>
      </div>

      <div class="col-md-5">
        <h3 style="padding-left: 0px;">{{model.perfil.nombre}}</h3>
        <table class="table">
          <tbody>
            {{#each-in model.perfil.informacionGeneral as |key item|}}
              <tr>
                <td>
                  {{#if item.label}}<span>{{{item.label}}}</span>{{/if}}
                  {{{item.value}}}
                </td>
              </tr>
            {{/each-in}}
          </tbody>
        </table>
      </div>

      <div class="col-md-4 social-side">
        {{#if documentosDisponibles}}
          <h3 class="text-center" style="padding-top: 0px;">Datos abiertos</h3>
        {{/if}}

        {{#each documentosDisponibles as |documento|}}
          <p>
            <a href="{{documento.urlDocumento}}" class="btn btn-{{documento.cssClasses}} width-full" target="_blank">
              {{documento.nombreDocumento}}
            </a>
          </p>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class="questionary">
  <div class="row">
    <div class="col-md-6">
      <h3></h3>
    </div>
  </div>

  {{#each-in model.perfil.recuadros as |key item|}}
    <div class="panel panel-default">
      {{#if item.label}}<div class="panel-heading">{{{item.label}}}</div>{{/if}}

      <div class="panel-body">
        {{{item.value}}}
      </div>
    </div>
  {{/each-in}}
</div>

{{#if disqusShortname}}
  {{disqus-comments identifier=model.perfil.disqusIdentifier}}
{{/if}}
